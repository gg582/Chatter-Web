{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "lib": ["DOM", "ES2021"],
    "types": ["bun-types"],
    "allowImportingTsExtensions": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "scripts/**/*", "tests/**/*"],
  "exclude": ["dist"]
}
